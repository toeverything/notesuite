{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--import=./register.js",
        "YPERSISTENCE": "./.db"
      },
      "program": "${workspaceFolder}/packages/server/src/index.ts",
      "cwd": "${workspaceFolder}/packages/server"
    }
  ],
  "compounds": [
    {
      "name": "Debug Backend + Common",
      "configurations": ["Debug Backend"],
      "preLaunchTask": "Run Common Dev"
    }
  ]
}
